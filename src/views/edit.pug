extends base.pug


block content
    hr
    h4 Change Title of video

    form(method="POST")
        input(name="title", placeholder="Video Title", value=video.title, required )
        input(name="description", type="text", placeholder="Description", required, maxlength=200, value = video.description)
        input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", required, value = video.hashtags.join())
        
        input(type="submit", value="Save")