extends base



block content
    if errorMessage 
        span=errorMessage
    h4 Uplaod your Video
    form(method="POST" action="")
        input(name="title", type="text", placeholder="Input your video name", required, minlength=1, maxlength=20)
        input(name="description", type="text", placeholder="Description", required, maxlength=200)
        input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", required)
        input(type="submit", value="Upload")
